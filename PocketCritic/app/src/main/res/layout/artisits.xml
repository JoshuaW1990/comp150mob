<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cs.tufts.edu.pocketcritic.ArtisitsActivity"
    android:weightSum="12">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/beatles"
            android:id="@+id/BandImage"
            android:layout_weight="10.14" />
        <TextView
            android:text="The Beatles"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/artistName"
            android:padding="5dp"
            android:textSize="20dp"
            android:gravity="center_horizontal"
            android:textColor="#000000"
            android:layout_weight="1" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="2">


            <Button
                android:text="Artist Bio"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/BioButton"
                android:layout_weight="1"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/likeordislike"
                android:id="@+id/VoteButtonsImage"
                android:layout_weight="1" />

        </LinearLayout>



        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:layout_weight="2">


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:layout_weight="1">


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/album1"
                    android:id="@+id/albumImage1" />
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2">

                    <TextView
                        android:text="Let It Be"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_horizontal"
                        android:textColor="#000000"
                        android:id="@+id/albumName1"
                        android:layout_weight="1" />
                    <TextView
                        android:text="Rating: 3.9"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="#000000"
                        android:gravity="center_horizontal"
                        android:id="@+id/albumRating1"
                            android:layout_weight="1" />
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:layout_weight="1">


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="201dp"
                    app:srcCompat="@drawable/album2"
                    android:id="@+id/albumImage2" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2">

                    <TextView
                        android:text="Abbey Road"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/albumName2"
                        android:gravity="center_horizontal"
                        android:textColor="#000000"
                        android:layout_weight="1" />

                    <TextView
                        android:text="Rating: 4.6"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="#000000"
                        android:id="@+id/albumRating2"
                        android:gravity="center_horizontal"
                        android:layout_weight="1" />


                </LinearLayout>

            </LinearLayout>

        </LinearLayout>



        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:layout_weight="2">


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:layout_weight="1">


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/album3"
                    android:id="@+id/albumImage3" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:text="Yellow Submarine"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/albumName3"
                        android:textColor="#000000"
                        android:gravity="center_horizontal"
                        android:layout_weight="1" />

                    <TextView
                        android:text="Rating: 3.0"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/albumRating3"
                        android:textColor="#000000"
                        android:gravity="center_horizontal"
                        android:layout_weight="1" />

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:layout_weight="1">


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="201dp"
                    app:srcCompat="@drawable/album4"
                    android:id="@+id/albumImage4" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <TextView
                        android:text="The Beatles"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="#000000"
                        android:gravity="center_horizontal"
                        android:id="@+id/albumName4"
                        android:layout_weight="1" />



                    <TextView
                        android:text="Rating: 4.4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_horizontal"
                        android:textColor="#000000"
                        android:id="@+id/albumRating4"
                        android:layout_weight="1" />


                </LinearLayout>


            </LinearLayout>


        </LinearLayout>


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="More Albums"
            android:id="@+id/moreAlbums"
            android:onClick="more_albums"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:textColor="#000000"
                android:text="Recommended Artists"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_height="100dp"
                android:layout_width="match_parent">


                <ImageView
                    android:layout_width="140dp"
                    android:layout_height="match_parent"
                    android:id="@+id/recommended_artist_image1"
                    app:srcCompat="@drawable/linkinpark"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Linkin Park"
                    android:textColor="#000000"
                    android:gravity="center" />
            </LinearLayout>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_height="100dp"
                android:layout_width="match_parent">


                <ImageView
                    android:layout_width="140dp"
                    android:layout_height="match_parent"
                    android:id="@+id/recommended_artist_image2"
                    app:srcCompat="@drawable/nightwish"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Nightwish"
                    android:textColor="#000000"
                    android:gravity="center" />
            </LinearLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="More Artists"
                android:textColor="#000000"
                android:id="@+id/moreArtists"/>


        </LinearLayout>>

    </LinearLayout>

</ScrollView>