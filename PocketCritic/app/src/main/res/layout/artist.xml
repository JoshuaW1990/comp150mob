<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:contentDescription="artistImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:id="@+id/artist_BandImage"
        android:layout_weight="10.14" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/artist_artistName"
        android:padding="5dp"
        android:textSize="20sp"
        android:gravity="center_horizontal"
        android:textColor="#000000"
        android:layout_weight="1" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_weight="2">


        <Button
            android:text="artist_bio"
            android:layout_width="160dp"
            android:layout_height="match_parent"
            android:id="@+id/artist_Bio" />

        <ImageView
            android:contentDescription="likeOrdislike"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/likeordislike"
            android:id="@+id/VoteButtonsImage" />

    </LinearLayout>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/artist_albumRoot">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:id="@+id/artist_albums">

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
